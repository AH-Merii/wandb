[flake8]

min_python_version = 3.6.0

exclude =
    .tox/
    .git/
    __pycache__
    build/
    dist/
    codemod/
    *.pyc
    *.egg-info
    .cache
    .eggs
    ./tests/pytest_tests/assets/fixtures/train.py
    ./tests/pytest_tests/unit_tests_old/
    ./tests/functional_tests/t0_main/metaflow/
    ./tests/functional_tests/t0_main/fastai/t1_v1.py
    ./src/__init__.py
    ./src/wandb_torch.py
    ./src/bin
    ./wandb/data/
    ./src/errors/
    ./src/old/
    ./src/proto/
    ./src/proto_check/
    ./src/env.py
    ./src/integration/magic.py
    ./src/integration/keras/keras.py
    ./src/integration/metaflow/
    ./src/keras/
    ./src/superagent/
    ./src/plots/
    ./src/sklearn/
    ./src/viz.py
    ./src/vendor/
    */wandb/run-*/files/code/
    */wandb/offline-run-*/files/code/

per-file-ignores =
   src/cli/cli.py:C901,I202
   src/wandb_controller.py:N803,N806
   src/filesync/step_checksum.py:B023
